---
import BlogList from '~/components/blog/List.astro'
import Layout from "../../layouts/PageLayout.astro";
import Headline from '~/components/blog/Headline.astro';
import { fetchProjects } from "~/utils/projects";
import { getLocaleFromUrl, useTranslations } from "~/i18n/translator";


const metadata = {
  title: 'Contact',
  openGraph: {
    type: 'blog',
  },
};

const locale = getLocaleFromUrl(Astro.url)
const { t } = useTranslations(locale)

const projects = await fetchProjects(locale)
console.log(projects[0])


---
<Layout metadata={metadata}>
    <section class="px-6 sm:px-6 py-12 sm:py-16 lg:py-20 mx-auto max-w-4xl">
        <Headline
          subtitle={"Projects"}
        >
          {"The best projects portfolio out there! Check it out"}
        </Headline>
        <BlogList posts={projects}></BlogList>
    </section>
</Layout>

